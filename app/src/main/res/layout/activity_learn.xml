<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="earus.com.topenglishwords.Learn">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Рейтинг: "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" "
        android:id="@+id/textView_rating"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Количество: "
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView_eng"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" "
        android:id="@+id/textView_wordCount"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/textView_eng"
        android:layout_below="@+id/textView_rating"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" "
        android:id="@+id/textView_rus"
        android:layout_below="@+id/textView_eng"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Знаю"
        android:id="@+id/button_yes"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/textView_eng"
        android:layout_alignLeft="@+id/button_no"
        android:layout_alignRight="@+id/button_no" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Не знаю"
        android:id="@+id/button_no"
        android:layout_below="@+id/button_yes"
        android:layout_alignLeft="@+id/button_maybe"
        android:layout_alignRight="@+id/button_maybe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подучить"
        android:id="@+id/button_maybe"
        android:layout_below="@+id/button_no"
        android:layout_centerHorizontal="true"
        android:width="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подробно"
        android:id="@+id/button_descr"
        android:width="150dp"
        android:layout_below="@+id/button_maybe"
        android:layout_alignLeft="@+id/button_maybe"
        android:layout_marginTop="58dp" />


</RelativeLayout>
